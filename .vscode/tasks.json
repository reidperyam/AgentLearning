{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ClaudeLearningProject.Api/ClaudeLearningProject.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "run-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/ClaudeLearningProject.Api/ClaudeLearningProject.Api.csproj",
                "--urls",
                "http://localhost:5000"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "csharp",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building",
                    "endsPattern": "^.*Application started"
                }
            }
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/ClaudeLearningProject.Api/ClaudeLearningProject.Api.csproj",
                "--urls",
                "http://localhost:5000"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "install-frontend",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/src/frontend"
            }
        },
        {
            "label": "dev-frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/src/frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "VITE",
                    "endsPattern": "ready in"
                }
            }
        },
        {
            "label": "build-frontend",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/src/frontend"
            },
            "group": "build"
        },
        {
            "label": "dev-all",
            "dependsOn": ["run-api", "dev-frontend"],
            "problemMatcher": []
        }
    ]
}
